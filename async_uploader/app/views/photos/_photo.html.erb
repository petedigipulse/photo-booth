<li class="col-xs-3">
	  <%= link_to image_tag(photo.image.thumb('180x180#').url, alt: photo.title, class: 'img-thumbnail'),
		  	photo.image.remote_url, target: '_blank' %>
	  <% if photo.title.present? %>
	  	<p><%=photo.title%></p>
	  <% end %>

	  <% if photo.author.present? %>
	  <p><b>Author:</b> <%= photo.author %></p>
	  <% end %>
</li> 