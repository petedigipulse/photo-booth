			types = /(\.|\/)(gif|jpe?g)|png|bmp)$/i;
	file= data.files[0];
	if (types.test(file.type) || types.test(file.name)) {
		data.submit();
	} else { alert(file.name + ' must be GIF, JPEG, BMP or PNG file'); }
		}
	});

	});
</script>

